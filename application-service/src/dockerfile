FROM node:18-alpine

WORKDIR /usr/src/app

# Install build tools needed for native modules
RUN apk add --no-cache python3 make g++ git

# Copy package files
COPY package*.json ./

# Run npm ci. If it fails, print npm logs so you can debug.
RUN npm ci --only=production || (cat /root/.npm/_logs/*.log && false)

# Copy the rest of the code
COPY . .

# Clean npm cache to reduce image size
RUN npm cache clean --force

EXPOSE 3000

ENV NODE_ENV=production

CMD ["node", "index.js"]
